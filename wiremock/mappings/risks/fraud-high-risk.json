{
  "request": {
    "method": "POST",
    "url": "/fraud/analyze",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$[?(@.customerId=='high-risk-client')]"
      }
    ]
  },
  "response": {
    "status": 200,
    "jsonBody": {
      "orderId": "{{jsonPath request.body '$.orderId'}}",
      "customerId": "high-risk-client",
      "analyzedAt": "{{now timezone='America/Sao_Paulo' format='yyyy-MM-dd'}}T{{now timezone='America/Sao_Paulo' format='HH:mm:ssXXX'}}",
      "classification": "HIGH_RISK",
      "occurrences": []
    },
    "headers": {
      "Content-Type": "application/json"
    }
  }
}
